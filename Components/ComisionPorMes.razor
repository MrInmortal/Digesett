@page "/Comision"
@using DIGESETTApp.Data
@using DIGESETTApp.Models;
@using Microsoft.EntityFrameworkCore;
@inject IJSRuntime JSRuntime
@inject AppDbContext DbContext
@inject NavigationManager Navigation

<h3 class="page-title">Comisi贸n por Mes</h3>

<div class="card">
    <div class="card-body">
        <h4 class="comision-total">Total de Comisi贸n: RD$ @totalComision.ToString("N2")</h4>
        <canvas id="comisionChart" style="width: 100%; height: 300px;"></canvas>
    </div>
</div>

@code {
    private decimal totalComision;
    private List<decimal> ultimosAportes = new();

    protected override async Task OnInitializedAsync()
    {
        var agenteId = 1; // Cambiar por l贸gica del agente en sesi贸n.

        var multas = await DbContext.Multas
            .Where(m => m.AgenteId == agenteId && m.Activa)
            .ToListAsync();

        totalComision = multas.Sum(m => m.Monto * 0.1m);
        ultimosAportes = multas.TakeLast(5).Select(m => m.Monto * 0.1m).ToList();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("renderChart", ultimosAportes);
        }
    }
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f6f9;
        margin: 0;
        padding: 0;
    }

    .page-title {
        text-align: center;
        color: #0056b3;
        margin-top: 30px;
        font-size: 2rem;
        font-weight: bold;
    }

    .card {
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        margin: 20px auto;
        padding: 20px;
        width: 80%;
        max-width: 1000px;
    }

    .card-body {
        text-align: center;
    }

    .comision-total {
        font-size: 1.5rem;
        color: #28a745;
        margin-bottom: 20px;
    }

    canvas {
        border-radius: 10px;
        background-color: #f1f1f1;
    }
</style>
